    "eslint": "^1.2.1",
    "eslint-config-airbnb": "0.0.8",
    "jpm": "^1.0.1",
    "st": "^0.5.5"
  },
  "preferences": [{
      "name": "CONTENT_URL",
      "title": "Ideatown content URL",
      "description": "Ideatown content URL",
      "type": "string",
      "value": "http://localhost:1337/stub-content/index.html"
    },
    {
        "name": "BADGE_COLOR",
